{% extends 'ValBundle::layout.html.twig' %}

{% block title %}Register list{% endblock %}

{% block body -%}
{% trans %}hoge{% endtrans %}

{% trans %}message.piyo{% endtrans %}

{{ 'message.huga'|trans }}

    <h1>Register list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Nickname</th>
                <th>Siteurl</th>
                <th>Twitter</th>
                <th>Facebook</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Remarks</th>
                <th>Createdby</th>
                <th>Updatedby</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Deletedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('register_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.nickname }}</td>
                <td>{{ entity.siteUrl }}</td>
                <td>{{ entity.twitter }}</td>
                <td>{{ entity.facebook }}</td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.remarks }}</td>
                <td>{{ entity.createdBy }}</td>
                <td>{{ entity.updatedBy }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.deletedAt %}{{ entity.deletedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('register_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('register_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('register_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
